<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:gravity="center_horizontal">

    <!-- Imagen del repuesto -->
    <ImageView
        android:id="@+id/repuesto_image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:contentDescription="Imagen del repuesto" />

    <!-- Nombre del repuesto -->
    <TextView
        android:id="@+id/repuesto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del repuesto"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textColor="#000000" />

    <!-- Precio del repuesto -->
    <TextView
        android:id="@+id/repuesto_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: $0.00"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:textColor="#FF5722" />

    <!-- Disponibilidad del repuesto -->
    <TextView
        android:id="@+id/repuesto_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponibilidad: En stock"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:textColor="#4CAF50" />

    <!-- Botón Agregar al carrito -->
    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver más info"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFC107" />
</LinearLayout>